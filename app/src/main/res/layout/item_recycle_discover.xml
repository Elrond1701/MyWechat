<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        tools:ignore="MissingConstraints">

<!--        <LinearLayout-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:paddingStart="5dp"-->
<!--            android:paddingEnd="5dp" >-->

        <ImageView
            android:id="@+id/item_recycle_discover_Profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/avatar1"/>
<!--        </LinearLayout>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/item_recycle_discover_Nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_recycle_discover_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/discover_img1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/discover_img2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/discover_img3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <VideoView
                android:id="@+id/discover_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/item_recycle_discover_Published_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#CDCDCD">

                    <TextView
                        android:id="@+id/discover_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_margin="5dp"
                        android:textColor="@color/white"
                        />

                    <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/white" />


                    <TextView
                        android:id="@+id/discover_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评论"
                        android:textSize="15sp"
                        android:layout_margin="5dp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/discover_like_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:visibility="gone"
                />

<!--            <TextView-->
<!--                android:id="@+id/discover_comment_list"-->
<!--                android:layout_marginTop="2dp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textSize="15sp"-->
<!--                />-->
            <TextView
                android:id="@+id/discover_comment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/comment_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:visibility="gone">

                <EditText
                    android:id="@+id/comment_input"
                    android:minWidth="240dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"/>

                <ImageView
                    android:id="@+id/comment_send"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/ic_send"/>

            </LinearLayout>

        </LinearLayout>

