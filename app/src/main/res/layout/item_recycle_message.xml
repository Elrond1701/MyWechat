<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/chat_msg_layout_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left">

        <ImageView
            android:id="@+id/chat_msg_profile_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avatar1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/chat_msg_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/chat_msg_voice_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/chat_msg_photo_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <VideoView
            android:id="@+id/chat_msg_video_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_msg_layout_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chat_msg_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/chat_msg_voice_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/chat_msg_photo_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>

        <VideoView
            android:id="@+id/chat_msg_video_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/chat_msg_profile_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avatar1"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>