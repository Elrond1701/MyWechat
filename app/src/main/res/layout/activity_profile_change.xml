<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.me.myprofile.change.ProfileChangeActivity">

    <ImageView
        android:id="@+id/ProfileChangeActivity_Profile"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/ProfileChangeActivity_Album"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/ProfileChangeActivity_Album"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/ProfileChangeActivity_Album"
        app:layout_constraintBottom_toTopOf="@id/ProfileChangeActivity_Camera"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/ProfileChangeActivity_Camera"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/ProfileChangeActivity_Camera"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp" />


</androidx.constraintlayout.widget.ConstraintLayout>